# 1C Settings
# Format: IBASE_N_NAME, IBASE_N_JR, IBASE_N_FORMAT where N is 0, 1, 2...

# Корневой путь к базам 1С для автодетекта (опционально)
# Если указан - будет автоматически искать все базы в кластерах
C1_SRVINFO_PATH=/home/usr1cv8/.1cv8/1C/1cv8

# Ручное указание баз (опционально, если не используете автодетект)
IBASE_0=PROD_ZUP_LOCAL
IBASE_0_JR=/path/to/jr
IBASE_0_FORMAT=lgf

# Solr Settings
SOLR_ENABLED=false
SOLR_MEM_MIN=2g
SOLR_MEM_MAX=32g
SOLR_DIR=/path/to/solr
SOLR_LISTEN_INTERFACE=127.0.0.1
SOLR_LISTEN_PORT=8983
SOLR_HOST=127.0.0.1
SOLR_PORT=8983
SOLR_JAVA_HOME=/path/to/java
SOLR_THREADS=12

# HTTP Settings
HTTP_LISTEN_INTERFACE=0.0.0.0
HTTP_LISTEN_PORT=8984

# Parser Settings
PARSER_THREADS=0

# Debug Settings
DEBUG_ENABLED=true
DEBUG_PARSER=false

# ClickHouse Settings (включено по умолчанию)
CLICKHOUSE_ENABLED=true
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=zhr1c

# Redis Settings
REDIS_ENABLED=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
